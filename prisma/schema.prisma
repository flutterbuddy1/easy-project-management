// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String?
  fullName       String?  @map("full_name") @db.VarChar(255)
  avatarUrl      String?  @map("avatar_url") @db.VarChar(500)
  organizationId String?  @map("organization_id")
  role           String   @default("member") @db.VarChar(50) // Deprecated, use roleId
  roleId         String?  @map("role_id")
  
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  emailNotifications Boolean @default(true) @map("email_notifications")

  roleRel         Role?          @relation(fields: [roleId], references: [id])
  organization    Organization?  @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  createdProjects Project[]      @relation("CreatedProjects")
  leadProjects    Project[]      @relation("ProjectLead")
  assignedTasks   Task[]         @relation("AssignedTasks")
  createdTasks    Task[]         @relation("CreatedTasks")
  comments        Comment[]
  invitationsSent Invitation[]   @relation("InvitedBy")
  accounts        Account[]
  sessions        Session[]
  notifications   Notification[]
  messages        Message[]
  uploads         File[]

  @@index([organizationId])
  @@index([roleId])
  @@map("users")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique // 'admin', 'manager', 'custom_role'
  displayName String   // 'Administrator', 'Project Manager'
  description String?
  isSystem    Boolean  @default(false) // Prevent deletion of core roles
  
  users       User[]
  permissions Permission[]
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("roles")
}

model Permission {
  id          String   @id @default(uuid())
  action      String   @unique // 'create:task', 'view:dashboard'
  group       String   // 'task', 'project', 'settings'
  description String?
  
  roles       Role[]

  @@map("permissions")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Organization {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users       User[]
  projects    Project[]
  customers   Customer[]
  invitations Invitation[]

  @@map("organizations")
}

model Project {
  id             String   @id @default(uuid())
  name           String   @db.VarChar(255)
  description    String?  @db.Text
  status         String   @default("active") @db.VarChar(50)
  organizationId String   @map("organization_id")
  createdById    String   @map("created_by_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  assignedLeadId String?  @map("assigned_lead_id")
  assignedLead   User?    @relation("ProjectLead", fields: [assignedLeadId], references: [id], onDelete: SetNull)

  clientName      String?   @map("client_name") @db.VarChar(255)
  clientPhone     String?   @map("client_phone") @db.VarChar(50)
  clientEmail     String?   @map("client_email") @db.VarChar(255)
  projectType     String    @default("website") @map("project_type") @db.VarChar(50)
  totalAmount     Decimal?  @map("total_amount") @db.Decimal(10, 2)
  advanceAmount   Decimal?  @map("advance_amount") @db.Decimal(10, 2)
  deadline        DateTime?
  revisionLimit   Int       @default(2) @map("revision_limit")
  priority        String    @default("medium") @db.VarChar(50)
  maintenancePlan Boolean   @default(false) @map("maintenance_plan")
  customerId      String?   @map("customer_id")
  notifyClient    Boolean   @default(true) @map("notify_client")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy    User         @relation("CreatedProjects", fields: [createdById], references: [id])
  customer     Customer?    @relation(fields: [customerId], references: [id], onDelete: SetNull)
  tasks        Task[]
  messages     Message[]
  files        File[]

  @@index([organizationId])
  @@index([createdById])
  @@index([assignedLeadId])
  @@index([customerId])
  @@map("projects")
}

model Customer {
  id             String   @id @default(uuid())
  name           String   @db.VarChar(255)
  email          String?  @db.VarChar(255)
  phone          String?  @db.VarChar(50)
  organizationId String   @map("organization_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  projects     Project[]

  @@index([organizationId])
  @@map("customers")
}

model Task {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(500)
  description String?  @db.Text
  status      String   @default("todo") @db.VarChar(50)
  priority    String   @default("medium") @db.VarChar(50)
  projectId   String   @map("project_id")
  assigneeId  String?  @map("assignee_id")
  createdById String   @map("created_by_id")
  dueDate     DateTime? @map("due_date")
  position    Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee  User?     @relation("AssignedTasks", fields: [assigneeId], references: [id], onDelete: SetNull)
  createdBy User      @relation("CreatedTasks", fields: [createdById], references: [id])
  comments  Comment[]

  @@index([projectId])
  @@index([assigneeId])
  @@index([createdById])
  @@map("tasks")
}

model Comment {
  id        String   @id @default(uuid())
  content   String   @db.Text
  taskId    String   @map("task_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  type      String   @default("user") @db.VarChar(50) // user, system
  fileUrl   String?  @map("file_url") @db.Text
  fileName  String?  @map("file_name") @db.VarChar(255)

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@index([taskId])
  @@index([userId])
  @@map("comments")
}

model Invitation {
  id             String    @id @default(uuid())
  organizationId String    @map("organization_id")
  email          String    @db.VarChar(255)
  role           String    @default("member") @db.VarChar(50)
  token          String    @unique @db.VarChar(255)
  invitedById    String?   @map("invited_by_id")
  status         String    @default("pending") @db.VarChar(50)
  expiresAt      DateTime  @map("expires_at")
  acceptedAt     DateTime? @map("accepted_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invitedBy    User?        @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([invitedById])
  @@index([email])
  @@index([status])
  @@map("invitations")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String   @db.VarChar(255)
  message   String   @db.Text
  type      String   @db.VarChar(50)
  read      Boolean  @default(false)
  link      String?  @db.VarChar(500)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@map("notifications")
}

model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text
  fileUrl   String?  @map("file_url")
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@map("messages")
}

model File {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  url       String   @db.Text
  size      Int
  type      String   @db.VarChar(100)
  projectId String   @map("project_id")
  uploadedById String @map("uploaded_by_id")
  createdAt DateTime @default(now()) @map("created_at")

  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploadedBy User    @relation(fields: [uploadedById], references: [id])

  @@index([projectId])
  @@index([uploadedById])
  @@map("files")
}
